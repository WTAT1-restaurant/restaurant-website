
<h1><%= user.fullName %>'s Profile</h1>
<table class="table">
    <tr>
        <th>Name</th>
        <td><%= user.fullName %></td>
    </tr>
    <tr>
        <th>Address</th>
        <td><%= user.fullAddress %></td>
    </tr>
    <tr>
        <th>Email</th>
        <td><%= user.email %></td>
    </tr>
    <tr>
        <th>Password</th>
        <td><%= user.password %></td>
    </tr>
</table>
<div class="container">
    <a href="/users">View all users</a>
</div>
<div class="container">
    <a href="<%= `/users/${user._id}/edit` %>">Edit User Details</a>
</div>
<div class="container">
    <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?') ">Delete</a>
</div>

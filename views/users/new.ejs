<div class="data-form">
    <form action="/users/create" method="POST">
        <h2>Create a new user:</h2>
        <label for="inputFirstName">First Name</label>
        <input type="text" name="first" id="inputFirstName" placeholder="First" autofocus>
        <br>
        <label for="inputLastName">Last Name</label>
        <input type="text" name="last" id="inputLastName" placeholder="Last">
        <br>
        <label for="inputStreetName">Street</label>
        <input type="text" name="streetName" id="inputStreetName" placeholder="Street">
        <br>
        <label for="inputHouseNumber">House Number</label>
        <input type="text" name="houseNumber" id="inputHouseNumber" placeholder="House Number">
        <br>
        <label for="inputAddition">Address Addition</label>
        <input type="text" name="addition" id="inputAddition" placeholder="Address Addition">
        <br>
        <label for="inputZipCode">Zip Code</label>
        <input type="text" name="zipCode" id="inputZipCode" pattern="\d*" placeholder="Zip Code" required>
        <br>
        <label for="inputCity">City</label>
        <input type="text" name="city" id="inputCity" placeholder="City">
        <br>
        <label for="inputEmail">E-mail address</label>
        <input type="email" name="email" id="inputEmail" placeholder="Email address" required>
        <br>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" placeholder="Password" required>
        <div class="container">
            <button class="button" type="submit">Sign In</button>
        </div>
    </form>
</div>

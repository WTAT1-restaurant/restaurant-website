<div class="data-form">
    <div class="userdata">
    <form action="/users/create" method="POST" class="profile">
        <h2>Sign Up</h2>
        <label for="inputFirstName">First Name</label>
        <input type="text" name="first" id="inputFirstName" placeholder="First" autofocus>
        <br>
        <label for="inputLastName">Last Name</label>
        <input type="text" name="last" id="inputLastName" placeholder="Last">
        <br>
        <label for="inputZipCode">Zip Code</label>
        <input type="text" name="zipCode" id="inputZipCode" pattern="\d*" placeholder="Zip Code" required>
        <br>
        <label for="inputEmail">Email</label>
        <input type="email" name="email" id="inputEmail" placeholder="Email address" required>
        <br>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" placeholder="Password" required>
          <br>
            <button class="button" type="submit">Sign Up</button>
    </form>
</div>
</div>
